{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es5", "es6", "ES2018"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist", "src/test/**/*.spec.ts"],
  "ts-node": {
    "files": true
  },
  "plugins": [{ "name": "dotnev" }]
}