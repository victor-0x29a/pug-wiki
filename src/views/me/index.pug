extends ../layout
include ../components

block layout-content
    - var usernameProfile = profile?.username || 'Nenhum usuário'
    +warning()
    div.container.margin-top-20
        section.row.center.flex-between
            div.group.group-modified
                p.high-size Nome de usuário
                input(type="text", name="username" value="" + usernameProfile)
            div.box
                button(type="button" disabled).width-auto.margin-right Trocar senha
                button(type="button" disabled).width-auto.btn-danger Excluir conta

        hr.margin-top.margin-bottom

        section.row.center.flex-between
            div.group
                p.high-size Últimas atividades
