extends ../layout
include ../components

block layout-content
    +title("Cadastre uma conta")

    div.container
        form.default-form
            section
                p.high-size #{"Usuário"}
                input(type="text").medium-size
            section
                p.high-size #{"Sua senha"}
                input(type="password").medium-size
            section
                p.high-size #{"Repita sua senha"}
                input(type="password").medium-size
            section
                button(type="submit").medium-size #{"Registrar"}
            section.details-form
                a(href="/sigin") #{"Já tem uma conta?"}