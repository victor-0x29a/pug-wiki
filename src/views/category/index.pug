extends ../layout
include ../components

block layout-content
    +title("Categorias")

    ul.category-list
        - var hasCategories = Boolean(categories.length)
        if hasCategories
            for category in categories
                li.category-item
                    a(href=`/category/${category.slug}`) #{category.label}
        else
            +text(
                "Nenhuma categoria encontrada."
            )