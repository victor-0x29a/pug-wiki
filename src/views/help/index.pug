extends ../layout
include ../components

block layout-content
    +title("Vire um doador")

    div.container.center
        img(src="/btc.png", alt="Bitcoin").icon
        section.donator
            h2 #{`Salve o #${process.env.appname}`}
            p #{"Ajude o projeto a se manter online, a carteira BTC está logo abaixo, não precisa ser um valor alto!"}
            div.wallet
                button(onclick=`copyToClipboard('${walletbtc}')`) #{walletbtc}

    script.
        function copyToClipboard(value) {
            navigator.clipboard.writeText(value)
        }