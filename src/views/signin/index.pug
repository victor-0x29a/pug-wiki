extends ../layout
include ../components

block layout-content
    +title("Entre na sua conta")

    div.container.center
        +warning()
        form(method="post", action="/auth/signin").default-form
            section.group
                p.high-size #{"Usuário"}
                input(type="text", name="username").medium-size
            section.group
                p.high-size #{"Senha"}
                input(type="password", name="password").medium-size
            section.group
                button(type="submit").medium-size #{"Entrar"}
            section.group.details-form
                a(href="/auth/recover") #{"Esqueceu a senha?"}
                a(href="/auth/signup") #{"Não tem uma conta?"}